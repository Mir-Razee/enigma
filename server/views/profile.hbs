<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    @import url('https://fonts.googleapis.com/css2?family=Bubblegum+Sans&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Acme&display=swap');

    .header_main {
        font-family: 'Bubblegum Sans', cursive;
        font-size: 70px;
        color: white;
    }

    .header_sub {
        font-family: 'Bubblegum Sans', cursive;
        font-size: 40px;
        color: white;
    }

    .container {
        color: white;
        font-size: 35px;
        font-family: 'Acme', sans-serif;
    }

    .title {
        font-size: 40px;
        color: #f4511e;
    }
</style>
<div class="row header_main">
    <div class="col">
        <a onclick="history.back()">
        <i class="fa fa-arrow-circle-left" style="font-size:60px; color:#f4511e; float:left; margin:20px 0px 0px 15px;"></i>
        </a>
    </div>
    <div class="col">ENIGMA</div>
    <div class="col"></div>
</div>
<hr color="white" style="border: 2px solid;">
<div class="header_sub">
    Your Profile
</div>
<hr color="white" style="border: 2px solid;">
<br />
<div class="container">

    <div class="row">
        <div class="col">
            <div class="title">
                NAME
            </div>
            <div>
                {{ Name }}
            </div>
        </div>
        <div class="col">
            <div class="title">
                E-MAIL
            </div>
            <div>
                {{ Email }}
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col">
            <div class="title">
                USERNAME
            </div>
            <div>
                {{ User_Id }}
            </div>
        </div>
        <div class="col">
            <div class="title">
                RANK
            </div>
            <div>
                {{ Rank }}
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col">
            <div class="title">
                NO. OF QUESTIONS SOLVED
            </div>
            <div>
                {{ Score }}
            </div>
        </div>
    </div>
</div>
